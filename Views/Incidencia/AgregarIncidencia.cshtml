@*SOLICITUD DE SERVICIO PARA USUARIO DE VEHÍCULO*@



<h2>SOLICITUD DE INCIDENCIA</h2>

<div class="row">
    <div class="col-md-12">
        <form method="post" action="InsertIncidencia">

            <div class="form-group">
                <label for="fecha" class="col-md-2 control-label">Fecha sugerida</label>
                <div class="col-md-10">
                    <input type="date" required="required" name="fecha" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label for="km" class="col-md-2 control-label">Kilometraje</label>
                <div class="col-md-10">
                    <input type="number" required="required" name="km" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label for="ubicacion" class="col-md-2 control-label">Direccion</label>
                <div class="col-md-10">
                    <input type="text" required="required" name="dir" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label for="vehiculo" class="col-md-2 control-label">Vehiculo</label>
                <div class="col-md-10">
                    @if (ViewBag.Vehiculo != null)
                    {
                        <input type="text" required="required" name="matricula" class="form-control" value="@ViewBag.Vehiculo.Matricula" placeholder="@ViewBag.Vehiculo.Matricula" />
                    }
                    else
                    {
                        <input type="text" required="required" name="matricula" class="form-control"  placeholder="Ingresar Matricula" />
                    }

                </div>
            </div>

            <div class="form-group">
                <label for="comentarios" class="col-md-2 control-label">Comentarios adicionales</label>
                <div class="col-md-10">
                    <input type="text" required="required" name="com" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="button" class="btn btn-danger">CANCELAR</button>
                    <button type="submit" class="btn btn-success">SOLICITAR</button>
                </div>
            </div>


        </form>
    </div>
</div>

