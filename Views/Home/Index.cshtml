<script src="~/Scripts/jquery-3.3.1.min.js"></script>
@model IEnumerable<CARS.Models.Incidencia>


@{
    ViewBag.Title = "C.A.R.S.";
}


<ul class="nav nav-tabs">
    <li class="active">
        <a class="nav-link active" id="Pendientes" data-toggle="tab">Pendientes<span class="badge">value="@ViewBag.IncidenciasPendientes"</span></a>
    </li>
    <li class="nav-item">
        <a id="Procesando" class="nav-link" data-toggle="tab">Procesando</a>
    </li>
    <li class="nav-item">
        <a id="Finalizadas" class="nav-link" data-toggle="tab">Finalizadas</a>
    </li>
    <li class="nav-item">
        <a id="Cancelada" data-toggle="tab">Canceladas</a>
    </li>
</ul>

<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="pendientes">

        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Buscar">
            </div>
            <button type="submit" class="btn btn-default">Buscar</button>
        </form>

        <div class="row">
            @Html.Partial("ListadoIncidenciasHome", Model)
        </div>
    </div>
    <div class="tab-pane fade" id="finalizadas">
        <div class="row">
        </div>

    </div>
    <script type="text/javascript">
            $(function(){
                $("#Finalizadas").click(function(){
                window.location.href = "@Url.Action("MostrarListaIncidencia","Home", new {id = 1})";
                });
            });

         $(function(){
                $("#Pendientes").click(function(){
                window.location.href = "@Url.Action("MostrarListaIncidencia","Home", new {id = 4})";
                });
         });

        $(function(){
                $("#Procesando").click(function(){
                window.location.href = "@Url.Action("MostrarListaIncidencia","Home", new {id = 3})";
                });
        });

        $(function(){
                $("#Cancelada").click(function(){
                window.location.href = "@Url.Action("MostrarListaIncidencia","Home", new { id = 2})";
                });
        });

    </script>
</div>

