
@{
    ViewBag.Title = "LogIn";
}

<h2>Iniciar Sesión</h2>

@model CARS.Usuario

<div class="row">
    <div class="col-md-8">
        <form method="post" action="LogIn/ValidarLogIn">
            <div class="form-group">

                @Html.LabelFor(m=>m.Mail, new {@class = "col-md-2 control-label" })
                <div class="col-md-10">
                    <input type="email" required name="email" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Contrasenia, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    <input type="password" required name="pass" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <input type="checkbox" name="recordar" />
                        <label for="recordar">Recordar usuario</label>    
                        
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">INGRESAR</button>
                </div>
            </div>
        </form>
    </div>
</div>


   

